@page
@model ClubMembership_RazorPages.Pages.AdminPages.ClubPages.ClubBoards.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ClubBoard</h4>
    <hr /> 
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ClubBoard.Club)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ClubBoard.Club.Code)
    </dd>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClubBoard.Semester)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClubBoard.Semester)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClubBoard.StartSemester)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClubBoard.StartSemester)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClubBoard.EndSemester)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClubBoard.EndSemester)
        </dd>
        <table class="table">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Member</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.GroupMembers)
                {
                    @if (item.Role != "Member")
                    {
                        <tr>
                            <td> <h6>@item.Membership.Code</h6></td>
                            <td> <h6>@item.Membership.Student.Code - @item.Membership.Student.Name</h6></td>
                            <td> <h6>@item.Role</h6></td>
                        </tr>
                    }
                }
                @foreach (var item in Model.GroupMembers)
                {
                    @if (item.Role == "Member")
                    {
                        <tr>
                            <td> <h6>@item.Membership.Code</h6></td>
                            <td> <h6>@item.Membership.Student.Code - @item.Membership.Student.Name</h6></td>
                            <td> <h6>@item.Role</h6></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </dl>
    <h3 class="text-danger">@ViewData["Nofication"]</h3>
    <form method="post">
        <input type="hidden" asp-for="ClubBoard.Id" />
        @if (ViewData["Nofication"]==null)
        {
        <input type="submit" value="Delete" class="btn btn-danger" />
        }
        <a asp-page="./Index" asp-route-id="@Model.ClubBoard.ClubId">Back to List</a>
    </form>
</div>
