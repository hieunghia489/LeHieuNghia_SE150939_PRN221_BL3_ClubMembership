@page
@model ClubMembership_RazorPages.Pages.AdminPages.ClubPages.ClubMembership.IndexModel

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <tr>
        <td>Code</td>
        <td>@Model.Club.Code </td>
        <Td><img src="@Model.Club.Logo" /> </Td>
    </tr>
     <tr>
        <td>Name</td>
        <td>@Model.Club.Name</td>
    </tr>
     <tr>
        <td>CreateDate</td>
        <td>@Model.Club.CreateDate.Day/@Model.Club.CreateDate.Month/@Model.Club.CreateDate.Year</td>
    </tr>
    <tr>
        <td>Description</td>
        <td>@Model.Club.Description</td>
    </tr>


</table>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Membership[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membership[0].JoinDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membership[0].LeaveDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membership[0].Student.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membership[0].Student.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model.Membership) {
            @if (item.Status == true)
            {
                <tr>
                    <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                        <h6>@item.JoinDate.Day/@item.JoinDate.Month/@item.JoinDate.Year</h6>
            </td>
                    @if (item.LeaveDate != null)
                    {
                      <td>
                            <h6>@item.LeaveDate.Value.Day/@item.LeaveDate.Value.Month/@item.LeaveDate.Value.Year</h6>
                        </td>
                    }
                    else
                    {
                        <td>Not yet</td>
                    }
                   
            <td>
                @Html.DisplayFor(modelItem => item.Student.Code)
            </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.Name)
                    </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>   
           }
}
    </tbody>
</table>
